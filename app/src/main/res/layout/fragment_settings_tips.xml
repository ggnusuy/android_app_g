<?xml version="1.0" encoding="utf-8"?><!-- 설정 - 팁 모아보기의 프래그먼트 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_tvTipsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/settings_tip"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_tvTipsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua_regular"
        android:padding="10dp"
        android:text="@string/settings_tip_message"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/settings_listTips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp" />

</LinearLayout>